{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true, // 和allowSyntheticDefaultImports配合
    "noImplicitAny": false, //可以使用any
    "removeComments": true, //删除注释
    "allowSyntheticDefaultImports": true, //引入模块的时候不用以*as的形式
    "noUnusedParameters":false, //可以存在定义了没使用的变量
    "baseUrl": ".", //以项目根目录为基
    "paths": {
      // 需要和baseUrl配合  目录别名  和vite.config.ts 中的alias配置为一样的可以方便路径提示
      "@/*": ["src/*"],
      "@com/*": ["src/components/*"],
      "@api/*": ["src/api/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
    },
    "lib": ["esnext", "dom","dom.iterable", "scripthost"],
    "types": ["vite/client"],
    "plugins": [{
      "name": "@vuedx/typescript-plugin-vue"
    }]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/views/Hello.jsx"],
  "exclude": ["node_modules", "dist"]
}
