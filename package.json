{
  "name": "baohe",
  "version": "0.0.12",
  "scripts": {
    "lint": "eslint ./src --ext .js,.ts,.vue ",
    "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
    "dev": "vite",
    "build": "vuedx-typecheck . && vite build",
    "serve": "vite preview",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0 -s",
    "cz": "git add -A && npx cz",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "better-scroll": "^2.2.1",
    "element-plus": "^1.0.2-beta.35",
    "qs": "^6.9.6",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.7",
    "@vuedx/typecheck": "^0.6.3",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "autoprefixer": "^10.2.5",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "enquirer": "^2.3.6",
    "eslint": "^7.22.0",
    "eslint-plugin-vue": "^7.7.0",
    "execa": "^5.0.0",
    "lint-staged": "^10.5.4",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "semver": "^7.3.4",
    "typescript": "^4.2.3",
    "vite": "^2.1.0",
    "vite-plugin-style-import": "^0.8.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --parser=typescript --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.{js,ts,vue}": "eslint --fix"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "license": "MIT",
  "repository": "https://github.com/longer008/baohe.git"
}
